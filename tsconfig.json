{
    "compilerOptions": {
        "noImplicitAny": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "typeRoots": [
            "./node_modules/@types/",
            "./types"
        ]
    },
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "useTranspileModule": true,
        "transpileOnly": true,
        "forceIsolatedModules": true,
        "reportFiles": [
            "src/**/*.{js,jsx,ts,tsx}"
        ],
        "files": [
            "src/index.tsx",
        ],
        "include": [
            "src/**/*"
        ],
        "exclude": [
            "node_modules"
        ],
    }
}
